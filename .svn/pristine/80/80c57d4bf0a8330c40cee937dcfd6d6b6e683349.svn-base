<ion-header>
  <ion-navbar color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Map</ion-title>
  </ion-navbar>
</ion-header>



<ion-content>



      <div>
          <ion-segment [(ngModel)]="maps">
  
            <ion-segment-button value="hyatt">
              Hyatt
            </ion-segment-button>
            <ion-segment-button value="mccormickplace">
                McCormick Pl
            </ion-segment-button>
            <ion-segment-button value="lakeside1">
              Lakeside 1
          </ion-segment-button>
          <ion-segment-button value="lakeside2">
            Lakeside 2
        </ion-segment-button>
          </ion-segment>
  
        </div>
       


          <div [ngSwitch]="maps">


          <ion-card *ngSwitchCase="'hyatt'">
            <img src="assets/img/hyatt.png">
            <ion-card-content>
          <h2>Hyatt</h2>
        </ion-card-content>
        </ion-card>
            
        
          <ion-card *ngSwitchCase="'mccormickplace'">
                <img src="assets/img/mcPlaceSquare.png">
                <ion-card-content>
              <h2>McCormick Place</h2>
            </ion-card-content>
            </ion-card>
        
        
            <ion-card *ngSwitchCase="'lakeside1'">
              <img src="assets/img/lakeside.png">
              <ion-card-content>
            <h2>Lakeside 1</h2>
          </ion-card-content>
          </ion-card>
      
        
          <ion-card *ngSwitchCase="'lakeside2'">
              
            <img src="assets/img/lakeside2.png">
            <ion-card-content>
          <h2>Lakeside 2</h2>
        </ion-card-content>
        </ion-card>
  
      </div>

      </ion-content>

        






     
